generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String // Хешований пароль
  name      String?
  role      String   @default("student") // student або admin
  results   Result[]
  createdAt DateTime @default(now())
}

model Grade {
  id        Int        @id @default(autoincrement())
  number    Int        @unique
  materials Material[]
  tests     Test[]
}

model Material {
  id      Int    @id @default(autoincrement())
  title   String
  content String
  gradeId Int
  grade   Grade  @relation(fields: [gradeId], references: [id])
}

model Test {
  id        Int        @id @default(autoincrement())
  title     String
  gradeId   Int
  grade     Grade      @relation(fields: [gradeId], references: [id])
  questions Question[]
  results   Result[]
}

model Question {
  id            Int    @id @default(autoincrement())
  text          String
  correctAnswer String
  options       String
  testId        Int
  test          Test   @relation(fields: [testId], references: [id])
}

model Result {
  id    Int @id @default(autoincrement())
  score Int

  // Зв'язок з користувачем замість userName
  userId Int
  user   User @relation(fields: [userId], references: [id])

  testId    Int
  test      Test     @relation(fields: [testId], references: [id])
  createdAt DateTime @default(now())
}
